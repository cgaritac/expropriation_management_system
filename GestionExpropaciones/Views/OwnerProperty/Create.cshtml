@using GestionExpropaciones.Common
@using GestionExpropaciones.Common.Helpers
@using GestionExpropaciones.Common.Enums
@inject Constants Constants
@model GestionExpropaciones.Models.OwnerPropertyModel

<form asp-controller="Files" asp-action="Edit" method="post">
    <div class="menu-container">
        <input type="hidden" asp-for="Id" />

        <section class="d-flex justify-content-between fw-bold mt-4">
            <div class="form-group">
                <label asp-for="Province" class="form-label">@Constants.ProvinceText</label>
                <select asp-for="Province" class="form-select" id="faseInput" disabled>
                    @foreach (ProvinceEnum fase in Enum.GetValues(typeof(ProvinceEnum)))
                    {
                        <option value="@((int)fase)" selected="@(Model.Province == fase ? "selected" : null)">
                            @EnumHelper.GetEnumDescription(fase)
                        </option>
                    }
                </select>
                <div class="validation-texts">
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group fw-bold">
                <label asp-for="Canton" class="form-label">@Constants.CantonText</label>
                <select asp-for="Canton" class="form-select" id="cantonInput" disabled>
                </select>
                <div class="validation-texts">
                    <span asp-validation-for="Canton" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group fw-bold">
                <label asp-for="District" class="form-label">@Constants.DistrictText</label>
                <select asp-for="District" class="form-select" id="districtInput" disabled></select>
                <div class="validation-texts">
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>
            </div>
        </section>

        <section class="d-flex justify-content-start fw-bold mt-1">
            <div class="form-group fw-bold mt-0">
                <label asp-for="Area" class="form-label">@Constants.AreaText</label>
                <input asp-for="Area" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" id="areaInput" disabled />
                <div class="validation-texts">
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>
            </div>
        </section>

        <section class="max-width-container table-responsive">
            <div class="table-container border-start border-bottom border-end">
                <table class="table table-bordered border-3 table-striped table-hover">
                    <thead class="table-header">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Province)</th>
                            <th>@Html.DisplayNameFor(model => model.Canton)</th>
                            <th>@Html.DisplayNameFor(model => model.District)</th>
                            <th>@Html.DisplayNameFor(model => model.Area)</th>
                            <th>@Constants.ActionsText</th>
                        </tr>
                    </thead>

                    <tbody class="table-group-divider">
                        @if (Model != null)
                        {

                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">@Constants.NoDataTablePlaceholder</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>

    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary mt-3 fw-bold regular-button" type="button" asp-controller="Files" asp-action="Index" method="get" title="Regresar">
            @IconHelper.ReturnIcon()
        </a>
        <div class="mt-3">
            <button class="btn custom-button-delete me-3 text-white fw-bold d-none" type="button" title="Cancelar" id="cancelButton">
                @IconHelper.CancelIcon()
            </button>
            <button class="btn custom-button-edit fw-bold" type="button" title="Editar" id="editButton">
                @IconHelper.EditIcon()
            </button>
            <button class="btn custom-button-create fw-bold d-none" type="submit" title="Guardar" id="saveButton">
                @IconHelper.SaveIcon()
            </button>
        </div>
    </div>
</form>
